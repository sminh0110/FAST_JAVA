package ch14;

public class Student {
	private String name;
	private int money;
	
	public Student(String name, int money) {
		this.name = name;
		this.money = money;
		System.out.println(name+"학생은 "+money+"원을 가지고 있다");
	}
	
	public void takeBus(Bus bus) {
		System.out.println(name+"학생은 "+bus.getBusNumber()+"번 버스를 타고 "
	+bus.bill+"원을 냈다.");
		money -= bus.bill;
	}
	
	public void takeSubway(Subway subway) {
		
	}
}
