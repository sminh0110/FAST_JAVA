package ch24;

import java.util.ArrayList;

public class Student {
	
	private String studentName;
	private static int serialNum = 1001;
	private int studentNum;
	private ArrayList<Subject> studying = new ArrayList<Subject>();
	
	public Student(String studentName) {
		this.studentName = studentName;
		this.studentNum = serialNum++;
	}
	
	public void setStudying(Subject subject) {
		studying.add(subject);
	}
	
	public void showScoreInfo() {
		for(int i=0; i<studying.size(); i++) {
			System.out.println(studentName);
			System.out.println(studying.get(i).getSubjectName()+": "+studying.get(i).getSubjectScore());
		}
	}
}
