package ch14;

public class Bus {
	int busNumber;
	int passengerCount;
	int money;
	
	public Bus(int busNumber) {
		this.busNumber = busNumber;
	}
	
	public void take(int money) {
		this.money += money;
		passengerCount++;
	}
	
	public int getBusNumber() {
		return busNumber;
	}
	
	public void showBusInfo() {
		System.out.println(busNumber+"번 버스 승객은 "+passengerCount+"명");
	}
}
