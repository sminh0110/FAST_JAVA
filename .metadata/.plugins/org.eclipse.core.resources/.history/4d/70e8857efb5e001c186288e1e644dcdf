package ch08;

import java.text.SimpleDateFormat;
import java.util.Date;

public class Order {
	public static String orderNum;

	public int orderPhone;
	public String orderAddress;
	
	private static Date time;
	private SimpleDateFormat dateFormat = new SimpleDateFormat("yyMMdd");
	private SimpleDateFormat timeFormat = new SimpleDateFormat("HHmmss");
	public String orderDate;
	public String orderTime;
	
	public int orderPrice;
	public int orderMenu;
	
	public Order(Customer customer, int menu) {
	
		orderPhone = customer.customerPhone;
		orderAddress = customer.address;
		
		time = new Date();

		orderDate = dateFormat.format(time);
		orderTime = timeFormat.format(time);
		orderNum = orderDate+orderTime;
		
		orderMenu = menu;
		switch (orderMenu) {
		case 0003 : orderPrice = 35000;
		break;
		default : System.out.println("존재하지 않는 메뉴");
		break;
		}
		
	}
	
	public void showOrder() {
		System.out.println("주문 접수번호: "+orderNum+"\n주문 핸드폰 번호: "+orderPhone
				+"\n 주문 주소: "+orderAddress+"\n주문메뉴: "+orderMenu);
	}
	
}
